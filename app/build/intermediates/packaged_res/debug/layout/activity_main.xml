<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <!-- TextView for Course 1 Label -->
    <TextView
        android:id="@+id/course1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:ignore="MissingClass" />

    <!-- EditText for Course 1 Grade -->
    <EditText
        android:id="@+id/course1Grade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/enter_grade"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/course1Label"
        app:layout_constraintTop_toTopOf="@id/course1Label"
        tools:ignore="DuplicateSpeakableTextCheck"
        android:inputType="numberDecimal"
        android:autofillHints="" />

    <!-- TextView for Course 2 Label -->

    <TextView
        android:id="@+id/course2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course1Grade"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        tools:ignore="DuplicateIds" />

    <!-- EditText for Course 2 Grade -->
    <EditText
        android:id="@+id/course2Grade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/enter_grade3"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/course2Label"
        app:layout_constraintTop_toTopOf="@id/course2Label"
        android:inputType="numberDecimal"
        android:autofillHints="" />

    <!-- TextView for Course 3 Label -->
    <TextView
        android:id="@+id/course3Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course2Grade"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>


    <!-- EditText for Course 3 Grade -->
    <EditText
        android:id="@+id/course3Grade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/enter_grade4"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/course3Label"
        app:layout_constraintTop_toTopOf="@id/course3Label"
        tools:ignore="UnknownId"
        android:inputType="numberDecimal"
        android:autofillHints="" />

    <!-- TextView for Course 4 Label -->
    <TextView
        android:id="@+id/course4Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course3Grade"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <!-- EditText for Course 4 Grade -->
    <EditText
        android:id="@+id/course4Grade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/enter_grade5"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/course4Label"
        app:layout_constraintTop_toTopOf="@id/course4Label"
        android:inputType="numberDecimal"
        android:autofillHints="" />


    <!-- TextView for Course 5 Label -->
    <TextView
        android:id="@+id/course5Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course4Grade"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <!-- EditText for Course 5 Grade -->
    <EditText
        android:id="@+id/course5Grade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/enter_grade2"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/course5Label"
        app:layout_constraintTop_toTopOf="@id/course5Label"
        android:autofillHints=""
        android:inputType="numberDecimal" />

    <!-- Compute GPA Button -->
    <Button
        android:id="@+id/computeGpaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compute_gpa"
        app:layout_constraintTop_toBottomOf="@id/course5Grade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- GPA Display Label -->
    <TextView
        android:id="@+id/gpaResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gpa_result"
        app:layout_constraintTop_toBottomOf="@id/computeGpaButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />



</androidx.constraintlayout.widget.ConstraintLayout>
